@inject NavigationManager Nav
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Title
                </th>
                <th scope="col" class="px-6 py-3">
                    Likes
                </th>
                <th scope="col" class="px-6 py-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @* THE LIST IS NOT EMPTY *@
            @if (Posts is not null && Posts.Any())
            {
                @foreach (var p in Posts)
                {
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <th scope="row" class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                            <div>
                                <div class="text-base font-semibold">@p.Title</div>
                                <div class="font-normal text-gray-500">@p.PublishedOn.ToShortDateString()</div>
                            </div>
                        </th>
                        <td class="px-6 py-4">
                            <div class="flex justify-start items-center space-x-2">
                                <div>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                                        class="bi bi-heart-fill text-red-500" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                            d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                    </svg>
                                </div>

                                <div>
                                    <p>@p.Likes</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <a href='/posts/{@p.PostId}'
                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Explore</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


@code {
    [Parameter] public List<PostSummaryDto>? Posts { get; set; }
}