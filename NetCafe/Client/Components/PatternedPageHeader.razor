<div
    class="w-full h-max-content rounded-xl shadow-lg pattern px-5 py-10 space-y-4 flex justify-center items-center flex-col text-center">
    <h1 class="text-5xl font-mono">@Title</h1>
    <div class="px-4 py-1 max-w-fit bg-white rounded-2xl transition-all dark:bg-black ">
        <h2 class="text-sm font-mono text-gray-500 dark:text-gray-400">@Subtitle</h2>
    </div>
    <p class="text-gray-900 text-base font-semibold">@Description</p>
</div>
<style>
    .pattern {
        background-color: #e5e5f7;
        opacity: 0.8;
        background-image: linear-gradient(30deg, #dbb8ea 12%, transparent 12.5%, transparent 87%, #dbb8ea 87.5%, #dbb8ea), linear-gradient(150deg, #dbb8ea 12%, transparent 12.5%, transparent 87%, #dbb8ea 87.5%, #dbb8ea), linear-gradient(30deg, #dbb8ea 12%, transparent 12.5%, transparent 87%, #dbb8ea 87.5%, #dbb8ea), linear-gradient(150deg, #dbb8ea 12%, transparent 12.5%, transparent 87%, #dbb8ea 87.5%, #dbb8ea), linear-gradient(60deg, #dbb8ea77 25%, transparent 25.5%, transparent 75%, #dbb8ea77 75%, #dbb8ea77), linear-gradient(60deg, #dbb8ea77 25%, transparent 25.5%, transparent 75%, #dbb8ea77 75%, #dbb8ea77);
        background-size: 20px 35px;
        background-position: 0 0, 0 0, 10px 18px, 10px 18px, 0 0, 10px 18px;
    }
</style>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public string? Description { get; set; }
}
