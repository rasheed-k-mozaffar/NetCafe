@page "/user/register"
<div class="flex justify-center items-center min-h-screen p-0 sm:p-2">
    <div class="p-6 rounded-lg shadow-lg ring-1 ring-slate-900/5 min-w-[450px]">
        <h1 class="font-extralight text-4xl mb-8">Create new account</h1>

        <EditForm Model="model" OnValidSubmit="HandleUserRegistrationAsync">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <ErrorAlert ErrorMessage="@errorMessage" />
            }
            <DataAnnotationsValidator />
            <div class="form-group">
                <label class="form-label">Full Name</label>
                <InputText @bind-Value="model.FullName" Placeholder="Example: John Doe" class="text-input" />
                <ValidationMessage For="() => model.FullName" class="validation-msg" />
            </div>

            <div class="form-group">
                <label class="form-label">Email</label>
                <InputText type="text" @bind-Value="model.Email" Placeholder="Example: johndoe@mail.com"
                    class="text-input" />
                <ValidationMessage For="() => model.Email" class="validation-msg" />
            </div>

            <div class="form-group">
                <label class="form-label">Password</label>
                <InputText type="password" @bind-Value="model.Password" placeholder="Create your password"
                    class="text-input" />
                <ValidationMessage For="() => model.Password" class="validation-msg" />
            </div>

            <div class="form-group flex flex-start">
                <input class="check-box mr-2" type="checkbox" @bind-value="model.SubscribeToNewsletter" />
                <label class="form-label text-gray-500">Do you want to subscribe to my mailing list?</label>
            </div>

            <div class="form-group">
                <button type="submit" disabled="@isMakingRequest"
                    class="w-full py-2 rounded-md bg-blue-600 text-white text-sm hover:bg-blue-700 disabled:bg-gray-400 disabled:text-gray-800">
                    Sign up
                </button>
            </div>

            <div class="mt-3">
                <hr />
            </div>

            <div class="form-group mt-3 text-center">
                <p class="text-sm font-light">If you already have an account? <a href="/user/sign-in"
                        class="text-blue-600 underline underline-offset-4 hover:text-blue-700"
                        style="@(isMakingRequest ? "pointer-events: none;" : "pointer-events: auto;")">Sign in here</a>
                </p>
            </div>
        </EditForm>
    </div>
</div>
