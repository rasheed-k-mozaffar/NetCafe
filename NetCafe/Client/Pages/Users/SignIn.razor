@page "/user/sign-in"

<div class="flex justify-center items-center min-h-screen">
    <div class="p-6 rounded-lg shadow-lg ring-1 ring-slate-900/5 min-w-[500px]">
        <h1 class="font-extralight text-4xl mb-8">Sign in</h1>

        <EditForm Model="model" OnValidSubmit="HandleUserSignInAsync">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <ErrorAlert ErrorMessage="@errorMessage" />
            }

            <DataAnnotationsValidator />

            <div class="form-group">
                <label class="form-label">Email</label>
                <InputText type="text" @bind-Value="model.Email" Placeholder="Example: johndoe@mail.com"
                    class="text-input" />
                <ValidationMessage For="() => model.Email" class="validation-msg" />
            </div>

            <div class="form-group">
                <label class="form-label">Password</label>
                <InputText type="password" @bind-Value="model.Password" placeholder="Create your password"
                    class="text-input" />
                <ValidationMessage For="() => model.Password" class="validation-msg" />
            </div>

            <div class="form-group">
                <button type="submit" disabled="@isMakingRequest"
                    class="w-full py-2 rounded-md bg-blue-600 text-white text-sm hover:bg-blue-700 disabled:bg-gray-400 disabled:text-gray-800">
                    Sign in
                </button>
            </div>

            <div class="mt-3">
                <hr />
            </div>

            <div class="form-group mt-3 text-center">
                <p class="text-sm font-light">Don't have an account? <a href="/user/register"
                        class="text-blue-600 underline underline-offset-4 hover:text-blue-700"
                        style="@(isMakingRequest ? "pointer-events: none;" : "pointer-events: auto;")">Sign up here</a>
                </p>
            </div>
        </EditForm>
    </div>
</div>