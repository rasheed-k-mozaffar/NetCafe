                        <p class="font-bold text-sm hover:text-white dark:text-white">Write New Post</p>
                    </div>
                </button>
            </div>

            <div>
                <button @onclick='(() => Nav.NavigateTo("/author/posts/manage"))' class="dash-action-link">
                    <div class="flex justify-center items-center space-x-8">
                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor"
                            class="bi bi-view-list text-blue-800" viewBox="0 0 16 16">
